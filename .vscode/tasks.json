{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "gcc",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=auto",
                "-m32",
                "-g",
                "${file}",
                "${fileDirname}/calc.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/gcc"
        }
    ]
}